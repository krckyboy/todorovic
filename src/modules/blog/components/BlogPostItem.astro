---
import PostCard from "./PostCard";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, description, pubDate, tags } = post.data;
---

<PostCard
  slug={post.slug}
  title={title}
  description={description}
  pubDate={pubDate}
  tags={tags}
/>
