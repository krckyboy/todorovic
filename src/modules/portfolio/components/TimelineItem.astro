---
import styles from './TimelineItem.module.css';

interface Props {
  title: string;
  period: string;
  duration: string;
  isCurrent?: boolean;
}

const { title, period, duration, isCurrent = false } = Astro.props;
---

<article class:list={[styles.item, isCurrent && styles.current]}>
  <div class={styles.connector}>
    <span class={styles.dot}></span>
  </div>
  <div class={styles.content}>
    <h4 class:list={[styles.title, 'u-heading-base-semibold']}>{title}</h4>
    <p class={styles.period}>{period} Â· {duration}</p>
    {isCurrent && <span class={styles.currentBadge}>Current</span>}
  </div>
</article>
