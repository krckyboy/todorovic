---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Skills - Dušan Todorović';
const description = 'Technical skills and expertise of Dušan Todorović in web development and software engineering.';

const skillCategories = [
  {
    name: 'Frontend',
    skills: ['TypeScript', 'React', 'Astro', 'HTML/CSS', 'Tailwind CSS'],
  },
  {
    name: 'Backend',
    skills: ['Node.js', 'Python', 'REST APIs', 'GraphQL', 'PostgreSQL'],
  },
  {
    name: 'Tools & Practices',
    skills: ['Git', 'CI/CD', 'Testing', 'Agile', 'Code Review'],
  },
];
---

<BaseLayout title={title} description={description}>
  <div class="container content">
    <h1>Skills</h1>

    <p class="intro">
      Here are the technologies and tools I work with regularly.
    </p>

    <div class="skill-grid">
      {skillCategories.map(({ name, skills }) => (
        <section class="skill-category">
          <h2>{name}</h2>
          <ul>
            {skills.map((skill) => (
              <li>{skill}</li>
            ))}
          </ul>
        </section>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  h1 {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-md);
    padding-top: var(--spacing-2xl);
  }

  .intro {
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-2xl);
  }

  .skill-grid {
    display: grid;
    gap: var(--spacing-xl);
  }

  @media (min-width: 768px) {
    .skill-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .skill-category {
    padding: var(--spacing-lg);
    background-color: var(--color-background-alt);
    border-radius: var(--border-radius-lg);
  }

  h2 {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-md);
    color: var(--color-primary);
  }

  ul {
    list-style: none;
  }

  li {
    padding-block: var(--spacing-xs);
    color: var(--color-text-muted);
  }
</style>
