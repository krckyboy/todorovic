---
import BaseLayout from '../layouts/BaseLayout.astro';
import SkillTags from '../modules/portfolio/components/SkillTags.astro';
import Timeline from '../modules/portfolio/components/Timeline.astro';

const title = 'Skills and Experience | Dušan Todorović, Frontend Team Lead';
const description =
  'Technical skills and leadership experience across React, Next.js, frontend architecture, and software delivery.';
---

<BaseLayout title={title} description={description}>
  <div class="container content">
    <header class="page-header">
      <h1 class="u-heading-3xl-bold">Skills & Experience</h1>
      <p class="intro">
        Here are my skills and professional experience in software development.
      </p>
    </header>

    <SkillTags />

    <Timeline />
  </div>
</BaseLayout>

<style>
  .page-header {
    padding-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
  }

  h1 {
    margin-bottom: var(--spacing-md);
  }

  .intro {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-muted);
  }
</style>
