---
import BaseLayout from '../layouts/BaseLayout.astro';
import SkillsSection from '../components/Skills.tsx';
import ExperienceSection from '../components/Experience.tsx';

const title = 'Skills & Experience - Dušan Todorović';
const description = 'Technical skills, soft skills, and work experience of Dušan Todorović in web development and software engineering.';
---

<BaseLayout title={title} description={description}>
  <div class="container content">
    <h1>Skills & Experience</h1>

    <p class="intro">
      Here are my skills and professional experience in software development.
    </p>

    <SkillsSection client:load />

    <ExperienceSection client:load />
  </div>
</BaseLayout>

<style>
  h1 {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-md);
    padding-top: var(--spacing-2xl);
  }

  .intro {
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-2xl);
  }
</style>
