---
import BaseLayout from "../layouts/BaseLayout.astro";
import SkillTags from "../components/SkillTags.astro";
import Timeline from "../components/Timeline.astro";

const title = "Skills & Experience - Dusan Todorovic";
const description =
  "Technical skills, soft skills, and work experience of Dusan Todorovic in web development and software engineering.";
---

<BaseLayout title={title} description={description}>
  <div class="container content">
    <header class="page-header">
      <h1>Skills & Experience</h1>
      <p class="intro">
        Here are my skills and professional experience in software development.
      </p>
    </header>

    <SkillTags />

    <Timeline />
  </div>
</BaseLayout>

<style>
  .page-header {
    padding-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
  }

  h1 {
    font-family: var(--font-family-heading);
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-md);
  }

  .intro {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-muted);
  }
</style>
