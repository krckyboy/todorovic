---
import BaseLayout from '../layouts/BaseLayout.astro';
import SkillTags from '../modules/portfolio/components/SkillTags.astro';
import Timeline from '../modules/portfolio/components/Timeline.astro';

const title =
  'Skills and Experience | Dušan Todorović, Software Engineer & Team Lead';
const description =
  'Technical and leadership skills across React, Next.js, backend integration, and software delivery.';
---

<BaseLayout title={title} description={description}>
  <div class="container content">
    <header class="page-header">
      <h1 class="u-heading-3xl-bold">Skills & Experience</h1>
      <p class="intro">
        Here are my skills and professional experience in software development.
      </p>
      <a class="story-link" href="/about">Read my story &rarr;</a>
    </header>

    <SkillTags />

    <Timeline />
  </div>
</BaseLayout>

<style>
  .page-header {
    padding-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
  }

  h1 {
    margin-bottom: var(--spacing-md);
  }

  .intro {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-muted);
  }

  .story-link {
    display: inline-flex;
    align-items: center;
    margin-top: var(--spacing-sm);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition-fast);

    &:hover {
      color: var(--color-primary-hover);
    }

    &:focus-visible {
      outline: 2px solid var(--color-primary);
      outline-offset: 2px;
      border-radius: var(--border-radius-sm);
    }
  }
</style>
