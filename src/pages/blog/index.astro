---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPostItem from '../../components/BlogPostItem.astro';
import Categories from '../../components/Categories.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Extract unique categories from all posts
const allCategories = [...new Set(sortedPosts.flatMap((post) => post.data.tags || []))].sort();

// Get active category from URL params
const url = new URL(Astro.request.url);
const activeCategory = url.searchParams.get('category') || undefined;

// Filter posts by category if one is selected
const filteredPosts = activeCategory
  ? sortedPosts.filter((post) => post.data.tags?.includes(activeCategory))
  : sortedPosts;

const title = 'Blog - Dusan Todorovic';
const description = 'Articles about web development, programming, and technology.';
---

<BaseLayout title={title} description={description}>
  <div class="container content">
    <header class="page-header">
      <h1>Blog</h1>
      <p class="intro">
        Thoughts and tutorials on web development and software engineering.
      </p>
    </header>

    {allCategories.length > 0 && (
      <Categories categories={allCategories} activeCategory={activeCategory} />
    )}

    {filteredPosts.length > 0 ? (
      <div class="posts-list">
        {filteredPosts.map((post) => (
          <BlogPostItem post={post} />
        ))}
      </div>
    ) : (
      <p class="no-posts">
        {activeCategory
          ? `No posts found in "${activeCategory}". Try another category or view all posts.`
          : 'No posts yet. Check back soon!'}
      </p>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    padding-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-xl);
  }

  h1 {
    font-family: var(--font-family-heading);
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-md);
  }

  .intro {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-muted);
  }

  .no-posts {
    padding: var(--spacing-2xl);
    text-align: center;
    font-size: var(--font-size-base);
    color: var(--color-text-muted);
    background-color: var(--color-background-alt);
    border-radius: var(--border-radius-lg);
  }
</style>
