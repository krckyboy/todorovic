---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, updatedDate, author, tags } = post.data;
const { Content } = await post.render();

const formattedPubDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdateDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={`${title} - Dušan Todorović`} description={description}>
  <article class="container content">
    <header class="post-header">
      <h1>{title}</h1>
      <div class="post-meta">
        <span class="author">By {author}</span>
        <time datetime={pubDate.toISOString()}>
          {formattedPubDate}
        </time>
        {updatedDate && (
          <span class="updated">
            (Updated: <time datetime={updatedDate.toISOString()}>{formattedUpdateDate}</time>)
          </span>
        )}
      </div>
      {tags.length > 0 && (
        <ul class="tags">
          {tags.map((tag) => (
            <li class="tag">{tag}</li>
          ))}
        </ul>
      )}
    </header>

    <div class="post-content">
      <Content />
    </div>

    <footer class="post-footer">
      <a href="/blog">&larr; Back to all posts</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post-header {
    padding-top: var(--spacing-2xl);
    padding-bottom: var(--spacing-xl);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--spacing-xl);
  }

  h1 {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    margin-bottom: var(--spacing-md);
  }

  .updated {
    font-style: italic;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    list-style: none;
  }

  .tag {
    padding: var(--spacing-xs) var(--spacing-sm);
    background-color: var(--color-background-alt);
    border-radius: var(--border-radius-sm);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .post-content {
    line-height: 1.8;
  }

  .post-content :global(h2) {
    font-size: var(--font-size-2xl);
    margin-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-md);
  }

  .post-content :global(h3) {
    font-size: var(--font-size-xl);
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-sm);
  }

  .post-content :global(p) {
    margin-bottom: var(--spacing-md);
  }

  .post-content :global(pre) {
    padding: var(--spacing-md);
    background-color: var(--color-background-alt);
    border-radius: var(--border-radius-md);
    overflow-x: auto;
    margin-bottom: var(--spacing-md);
  }

  .post-content :global(code) {
    font-family: var(--font-mono);
    font-size: var(--font-size-sm);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    padding-left: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
  }

  .post-content :global(li) {
    margin-bottom: var(--spacing-xs);
  }

  .post-content :global(blockquote) {
    padding-left: var(--spacing-md);
    border-left: 3px solid var(--color-primary);
    color: var(--color-text-muted);
    font-style: italic;
    margin-bottom: var(--spacing-md);
  }

  .post-footer {
    margin-top: var(--spacing-2xl);
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--color-border);
  }

  .post-footer a {
    color: var(--color-primary);
  }

  .post-footer a:hover {
    color: var(--color-primary-hover);
  }
</style>
