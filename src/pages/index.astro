---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import FeaturedPosts from '../modules/blog/components/FeaturedPosts.astro';
import { getFeaturedBlogPosts } from '../modules/blog/services/blogPosts';
import dusanPortrait from '../assets/images/dusan.png';

const recentPosts = await getFeaturedBlogPosts();

const title = 'Dušan Todorović | Software Engineer & Team Lead';
const description =
  'Software engineer and team lead sharing practical frontend and backend lessons, architecture decisions, and delivery workflows for modern web products.';

const personJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Dušan Todorović',
  jobTitle: 'Lead Frontend Developer',
  url: 'https://todorovic.dev',
  sameAs: [
    'https://github.com/krckyboy',
    'https://www.linkedin.com/in/dusan-todorovic-krcky/',
  ],
};
---

<BaseLayout title={title} description={description}>
  <script
    slot="head"
    type="application/ld+json"
    set:html={JSON.stringify(personJsonLd)}
  />

  <Hero imageSrc={dusanPortrait} imageAlt="Dušan Todorović portrait" />
  <div class="container">
    <FeaturedPosts posts={recentPosts} />
  </div>
</BaseLayout>
