---
import BaseLayout from '../layouts/BaseLayout.astro';
import ImageAndText from '../components/ImageAndText.astro';
import FeaturedPosts from '../components/FeaturedPosts.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const title = 'Dušan Todorović - Software Developer';
const description = 'Personal portfolio and blog of Dušan Todorović. Software developer focused on web technologies.';
---

<BaseLayout title={title} description={description}>
  <div class="container">
    <ImageAndText />
    <FeaturedPosts posts={recentPosts} />
  </div>
</BaseLayout>
