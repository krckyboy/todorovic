---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import FeaturedPosts from '../modules/blog/components/FeaturedPosts.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const title = 'Dušan Todorović | Frontend Team Lead and JavaScript Engineer';
const description =
  'Frontend Team Lead and JavaScript engineer sharing work on React, Next.js, and modern web development.';

const personJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Dušan Todorović',
  jobTitle: 'Frontend Team Lead',
  url: 'https://todorovic.dev',
  sameAs: [
    'https://github.com/krckyboy',
    'https://www.linkedin.com/in/dusan-todorovic-krcky/',
  ],
};
---

<BaseLayout title={title} description={description}>
  <script
    slot="head"
    type="application/ld+json"
    set:html={JSON.stringify(personJsonLd)}
  />

  <Hero />
  <div class="container">
    <FeaturedPosts posts={recentPosts} />
  </div>
</BaseLayout>
