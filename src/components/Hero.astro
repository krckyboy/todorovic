---
import styles from "./Hero.module.css";
import SocialIcons from "./SocialIcons.astro";

interface Props {
  name?: string;
  title?: string;
  intro?: string;
  imageSrc?: string;
  imageAlt?: string;
  showGradient?: boolean;
}

const {
  name = "Dušan Todorović",
  title = "Software Developer",
  intro = "Building great web experiences with modern technologies. I write about web development, programming, and technology.",
  imageSrc,
  imageAlt = "Dušan Todorović",
  showGradient = false,
} = Astro.props;
---

<section class:list={[styles.hero, showGradient && styles.withGradient]}>
  <div class={styles.container}>
    <div class={styles.content}>
      {
        imageSrc && (
          <div class={styles.imageWrapper}>
            <img
              src={imageSrc}
              alt={imageAlt}
              class={styles.image}
              width="200"
              height="200"
              loading="eager"
            />
          </div>
        )
      }
      <div class={styles.text}>
        <h1 class={styles.name}>{name}</h1>
        <p class={styles.title}>{title}</p>
        <p class={styles.intro}>{intro}</p>
        <div class={styles.social}>
          <SocialIcons />
        </div>
        <div class={styles.actions}>
          <a href="/about" class={styles.buttonPrimary}>About Me</a>
          <a href="/skills" class={styles.buttonSecondary}>Skills</a>
          <a href="/cv.pdf" class={styles.buttonSecondary} download>
            Download CV
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
