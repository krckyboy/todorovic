---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import styles from './Hero.module.css';
import SocialIcons from './SocialIcons.astro';

interface Props {
  name?: string;
  title?: string;
  intro?: string;
  imageSrc?: ImageMetadata;
  imageAlt?: string;
  showGradient?: boolean;
}

const {
  name = 'Dušan Todorović',
  title = 'Software Engineer & Team Lead',
  intro = 'Lead Frontend Developer at Constructor Tech. I build fast, accessible products across frontend and backend, and occasionally write about the craft.',
  imageSrc,
  imageAlt = 'Dušan Todorović',
  showGradient = false,
} = Astro.props;
---

<section class:list={[styles.hero, showGradient && styles.withGradient]}>
  <div class={styles.container}>
    <div class={styles.content}>
      {
        imageSrc && (
          <div class={styles.imageWrapper}>
            <Image
              src={imageSrc}
              alt={imageAlt}
              class={styles.image}
              width={200}
              height={200}
              densities={[1, 2]}
              sizes="(min-width: 768px) 200px, 160px"
              quality={95}
              loading="eager"
            />
          </div>
        )
      }
      <div class={styles.text}>
        <h1 class:list={[styles.name, 'u-heading-4xl-bold']}>{name}</h1>
        <p class={styles.title}>{title}</p>
        <p class={styles.intro}>{intro}</p>
        <div class={styles.social}>
          <SocialIcons />
        </div>
        <div class={styles.actions}>
          <a href="/about" class={styles.buttonPrimary}>About Me</a>
          <a href="/skills" class={styles.buttonSecondary}>View Experience</a>
        </div>
      </div>
    </div>
  </div>
</section>
