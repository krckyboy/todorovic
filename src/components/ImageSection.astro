---
import styles from './ImageSection.module.css';

interface ImageData {
  src: string;
  alt: string;
}

interface Props {
  images?: ImageData[];
  title?: string;
}

const defaultImages: ImageData[] = [
  { src: '/images/about/photo-1.jpg', alt: 'About photo 1' },
  { src: '/images/about/photo-2.jpg', alt: 'About photo 2' },
  { src: '/images/about/photo-3.jpg', alt: 'About photo 3' },
];

const { images = defaultImages, title } = Astro.props;

// Don't render if no images
if (images.length === 0) {
  return;
}
---

<section class={styles.section}>
  {title && <h2 class={styles.title}>{title}</h2>}
  <div class={styles.gallery}>
    {images.map(({ src, alt }) => (
      <div class={styles.imageWrapper}>
        <img
          src={src}
          alt={alt}
          class={styles.image}
          loading="lazy"
        />
      </div>
    ))}
  </div>
</section>
