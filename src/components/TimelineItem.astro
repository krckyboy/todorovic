---
import styles from "./TimelineItem.module.css";

interface Props {
  title: string;
  company: string;
  location: string;
  period: string;
  duration: string;
  isCurrent?: boolean;
}

const {
  title,
  company,
  location,
  period,
  duration,
  isCurrent = false,
} = Astro.props;
---

<article class:list={[styles.item, isCurrent && styles.current]}>
  <div class={styles.connector}>
    <span class={styles.dot}></span>
  </div>
  <div class={styles.content}>
    <h3 class={styles.title}>{title}</h3>
    <p class={styles.company}>{company} · {location}</p>
    <p class={styles.period}>{period} · {duration}</p>
  </div>
</article>
